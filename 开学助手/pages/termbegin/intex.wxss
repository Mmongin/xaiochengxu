/* pages/termbegin/intex.wxss */
page {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background: url(https://qiniu.mutou135468.top/6cabdbb8-d235-11ea-9bb4-00163e0a349f.jpg);
  background-size: cover;
}


/* 设置头部家长专区 */
.kaixue {
  /* position: fixed;
  top: 150rpx; */
  width: 92%;
  margin: 40rpx auto;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  /* position: relative; */
  /* background-color: aqua; */
}

.kaixue .word {
  width: 224prx;
  font-weight: 500;
  letter-spacing: 5rpx;
  height: 80prx;
  font-size: 56rpx;
  color: #466E29;
  text-shadow: 0px 5px 3px rgba(0, 0, 0, 0.16);
}


/* 设置专区列表栏 */
.zhunbei {
  width: 92%;
  height: 170rpx;
  display: flex;
  text-decoration: row;
  margin: auto;
  text-align: center;
  justify-content: space-between;
}

/* 专区栏中的文字 */
.zhunbei text {
  width: 160rpx;
  height: 56rpx;
  font-size: 40rpx;
  color: #2B411B;

}

/* 设置专区栏中的图片 */
.zhunbei image {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-right: 100rpx;
  width: 105rpx;
  height: 105rpx;
}
/* 设置按钮列表 */
.liebiao {
  width: 85%;
  height: 800rpx;
  margin: auto;
  margin-bottom: 110px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  letter-spacing: 7rpx;

}

/* 设置四个列表块 */
.liebiao .btn {
  height: 155rpx;
  color: #FFFFFF;
  font-size: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-radius: 40rpx;
  box-shadow: 0px 5px 6px rgba(0, 0, 0, 0.16);
  padding-left: 52rpx;
}

@keyframes movein{
  0%{
    transform: translate(1000rpx,0);
    opacity: 0;
  }

  100%{
    transform: translate(0,0);
    opacity: 1;
  }

}

/* 设置返回栏样式 */
.backbox {
  width: 95%;
  height: 126rpx;
  margin: 0 auto;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}

.back {
  margin: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 95%;
  height: 126rpx;
  background-color: #FFFFFF;
  box-shadow: 0px 5px 6px rgba(0, 0, 0, 0.16);
  border-radius: 40rpx;
}

/* 设置返回栏文字 */
.back .backword {
  font-size: 52rpx;
  color: #446B45;
  font-family: PingFang SC;
  font-weight: 500;
  letter-spacing: 5rpx;
  line-height: 37px;
  padding-right: 20rpx;
}

.back image {
  width: 100rpx;
  height: 100rpx;
}